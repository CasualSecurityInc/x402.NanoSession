{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@nanosession/core": ["./packages/core/src/index.ts"],
      "@nanosession/client": ["./packages/client/src/index.ts"],
      "@nanosession/server": ["./packages/server/src/index.ts"],
      "@nanosession/rpc": ["./packages/rpc/src/index.ts"],
      "@nanosession/faremeter": ["./packages/faremeter-plugin/src/index.ts"]
    }
  },
  "include": ["packages/*/src/**/*", "examples/*/src/**/*", "test/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "packages/*/src/**/*.test.ts",
    "examples/*/src/**/*.test.ts"
  ],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/rpc" },
    { "path": "./packages/client" },
    { "path": "./packages/server" },
    { "path": "./packages/faremeter-plugin" }
  ]
}
